<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/menu"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/menuButton"
            android:layout_width="60dp"
            android:layout_height="40dp"

            android:background="#00000000"
            android:drawableLeft="@drawable/menu"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp"/>
        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘은 내가 요리사"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <requestFocus />
    </EditText>

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioGroup
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="210dp"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/alloption1"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:text="추천순"/>

                        <RadioButton
                            android:id="@+id/alloption2"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:text="최신순"/>
                    </RadioGroup>

                    <ListView
                        android:id="@+id/list_all"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/search"/>
                </LinearLayout>

            <LinearLayout
                android:id="@+id/Korean"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="210dp"
                    android:orientation="horizontal">
                    <RadioButton

                        android:id="@+id/koroption1"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="추천순"/>

                    <RadioButton
                        android:id="@+id/koroption2"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="최신순"/>
                </RadioGroup>

                <ListView
                    android:id="@+id/list_korean"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/search"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Japanese"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="210dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="추천순"
                        android:id="@+id/japoption1" />

                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="최신순"
                        android:id="@+id/japoption2" />
                </RadioGroup>

                <ListView
                    android:id="@+id/list_japanese"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/search"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Chinese"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="210dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="추천순"
                        android:id="@+id/chnoption1" />

                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="최신순"
                        android:id="@+id/chnoption2" />
                </RadioGroup>

                <ListView
                    android:id="@+id/list_chinese"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/search"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/American"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="210dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="추천순"
                        android:id="@+id/engoption1" />

                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="최신순"
                        android:id="@+id/engoption2" />
                </RadioGroup>

                <ListView
                    android:id="@+id/list_american"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/search"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Etc"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="210dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="추천순"
                        android:id="@+id/etcoption1" />

                    <RadioButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="최신순"
                        android:id="@+id/etcoption2" />
                </RadioGroup>

                <ListView
                    android:id="@+id/list_etc"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/search"/>

            </LinearLayout>
        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tabStripEnabled="true" />
        </TabHost>

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"/>

    <ListView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:divider="#DCDCDC"
        android:dividerHeight="1dp"
        android:background="#F5F5F5"
        android:id="@+id/drawer"/>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>