<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/myrecipe_drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.sap.team_f.cook.MyRecipeActivity">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/recipeList"
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/my_recipe"/>

    <Button
        android:id="@+id/recipeAddBtn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="#D3D3D3"
        android:layout_marginLeft="300dp"
        android:text="추가" />
</LinearLayout>
    <ListView android:layout_width="240dp"
        android:layout_height="match_parent"
        android:id="@+id/myRecipeNavList"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#EDEDED"/>
</android.support.v4.widget.DrawerLayout>